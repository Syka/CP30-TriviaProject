<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.jed.triviaproject.QuestionScreen">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:autoText="false"
        android:textSize="40dp"
        android:layout_gravity="center|left"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/txtCategory"
        android:background="#ff353535"
        android:textColor="#ff5be0ff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtQuestion"
        android:textSize="25dp"
        android:layout_below="@+id/txtCategory"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="172dp"
        android:layout_height="110dp"
        android:text=""
        android:id="@+id/btnA1"
        android:textSize="20dp"
        android:layout_below="@+id/txtQuestion"
        android:layout_alignParentStart="true"
        android:onClick="TriviaOnClickListener" />

    <Button
        android:layout_width="172dp"
        android:layout_height="110dp"
        android:text=""
        android:id="@+id/btnA2"
        android:textSize="20dp"
        android:layout_alignTop="@+id/btnA1"
        android:layout_toEndOf="@+id/btnA1"
        android:onClick="TriviaOnClickListener" />

    <Button
        android:layout_width="172dp"
        android:layout_height="110dp"
        android:text=""
        android:id="@+id/btnA3"
        android:textSize="20dp"
        android:layout_below="@+id/btnA1"
        android:layout_alignParentStart="true"
        android:onClick="TriviaOnClickListener" />

    <Button
        android:layout_width="172dp"
        android:layout_height="110dp"
        android:text=""
        android:id="@+id/btnA4"
        android:textSize="20dp"
        android:layout_below="@+id/btnA1"
        android:layout_toEndOf="@+id/btnA3"
        android:onClick="TriviaOnClickListener" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="60"
        android:id="@+id/textView6"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time Remaining"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
