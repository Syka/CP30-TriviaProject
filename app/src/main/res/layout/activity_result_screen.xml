<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.jed.triviaproject.ResultScreen"
    android:background="@drawable/results">

    <TextView
        android:text="Results"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:autoText="false"
        android:textSize="50dp"
        android:layout_gravity="center|left"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/textView8"
        android:textColor="#F0F7FF"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:text="Time Elapsed"
        android:id="@+id/txt1"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:textColor="#F0F7FF" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:text="Right Answers"
        android:id="@+id/textView10"
        android:textSize="25dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        android:textColor="#F0F7FF" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="xxx s."
        android:id="@+id/txtTotalTime"
        android:layout_alignTop="@+id/txt1"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#F0F7FF" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="xx/xx"
        android:id="@+id/txtRatio"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView10"
        android:textIsSelectable="false"
        android:textColor="#F0F7FF" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Play Again?"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:onClick="PlayAgainOnClickListener"
        android:textColor="#F0F7FF" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:text="Final Score"
        android:id="@+id/textView13"
        android:textSize="25dp"
        android:gravity="center_vertical"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"
        android:textColor="#F0F7FF" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:text="#"
        android:id="@+id/txtScore"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/txtRatio"
        android:textColor="#F0F7FF" />

</RelativeLayout>
