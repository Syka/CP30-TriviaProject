<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.jed.triviaproject.ResultScreen"
    android:background="@drawable/results">

    <TextView
        android:text="Results"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:autoText="false"
        android:textSize="50dp"
        android:layout_gravity="center|left"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/textView8"
        android:textColor="#ff16373e"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Time"
        android:id="@+id/txt1"
        android:textSize="35dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView8"
        android:layout_toStartOf="@+id/txtTotalTime" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ratio"
        android:id="@+id/textView10"
        android:textSize="35dp"
        android:layout_below="@+id/txt1"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/txtTotalTime"
        android:layout_alignTop="@+id/txt1"
        android:layout_alignParentEnd="true"
        android:textSize="70dp"
        android:gravity="center_vertical|center_horizontal"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/txtRatio"
        android:textSize="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="Play Again?"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:onClick="PlayAgainOnClickListener" />

    <TextView
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score"
        android:id="@+id/textView13"
        android:textSize="35dp"
        android:gravity="center_vertical"
        android:layout_above="@+id/button10"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="52dp"/>

    <TextView
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#"
        android:id="@+id/txtScore"
        android:textSize="70dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/txtRatio"/>

</RelativeLayout>
